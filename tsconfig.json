{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "downlevelIteration": true,


    "noImplicitAny": false, // CHANGE TO TRUE TO ENABLE TYPECHECKING


    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      // "es2015.promise"
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "cypress/**/*.ts",
    "../../node_modules/cypress",

  ],
  "exclude": [
    "node_modules"
  ]
}
