{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  //   "tests/**/*.ts",
  //   "cypress.d.ts",
  //   "cypress/**/*.ts"
    "tests/component/index.*",
    "tests/component/commands.ts",
    "env.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "tests/OLD",
    "node_modules"
  ]
}
